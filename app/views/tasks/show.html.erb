<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<div class="form-check">
  <input class="form-check-input" type="checkbox"  value="" id="defaultCheck1" <%= 'checked' if @task.completed? %>>
  <label class="form-check-label" for="defaultCheck1">
    <% if @task.completed? %>
      This Task is completed.
    <% else %>
      This Task is not completed yet.
    <% end %>
  </label>
</div>
<%= link_to "Back to tasks", tasks_path %>
<%= button_to 'Edit Item', edit_task_path(@task), :class => 'mark-button', :method => :get %>
